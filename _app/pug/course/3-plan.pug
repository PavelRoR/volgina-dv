mixin p(n, h4, h5, ...items)
	.variant(class='variant-'+n)
		h4.variant-title=h4
		.variant-info
			h5.variant-info-title=h5
			ul.general-list
				each item in items
					li=item
		.clearfix

section#plan
	.container
		.content
			+imgs('general-img general-img-plan-1', 'img/images/branch-1.png', 'Ветка')
			+gt('general-title-green', 'Программа курса')
			.variant.variant-1
				.row
					.col-md-6
						h4.variant-title Пакет СЕРЕБРО
						.variant-info
							ul.general-list
								li Знакомство с алгоритмом работы на курсе
								li I стадия ДВ. Протокол ДВ. Настройка на НЛС
								li Идеограмма. Гештальты. Связь бессознательного и спонтанного графического изображения
								li II стадия. Считывание сенсорной информации атмосферы
								li III стадия. Скетчи. Связь образов и бессознательного
								li Прогнозирование бинарных событий. Таскерство. Самотаскерство
					.col-md-6
						.variant-info
							h5.variant-info-title Что получите после прохождения пакета СЕРЕБРО
							ul.general-list.general-list-2
								li Научитесь настраиваться на процесс вхождения в нелокальное состояние    
								li Подключаться к Вселенской информационной матрице и удерживать с ней связь
								li Анализировать 3 стадии получения истинной информации о цели и показывать высокие результаты при считывании
								li Эффективно получать ответы на жизненные вопросы через тонкий план и через взаимодействие с будущим при помощи практики дистанционного видения
			.variant.variant-2
				.row
					.col-md-6
						h4.variant-title Пакет ЗОЛОТО
						.variant-info
							ul.general-list
								li IV стадия Работа с информацией
								li Виртуальные инструменты, эфирный двойник. Даузинг
								li V стадия ДВ. Связь бессознательного и лингвистикой
								li VI стадия. Считывание событий
					.col-md-6
						.variant-info
							h5.variant-info-title Что получите после прохождения пакета ЗОЛОТО
							ul.general-list.general-list-2
								li Анализировать 6 стадий получения истинной информации о цели
								li Предсказывать результаты исходов событий
								li Искать предметы, ценные вещи и людей
								li Считывать знаковые события в Мире
			.variant.variant-3
				.row
					.col-md-6
						h4.variant-title Пакет ПЛАТИНА
						.variant-info
							h5.variant-info-title ДВ-Медицина:
							ul.general-list
								li Считывание человека
								li Считывание характера и эмоций человека
								li Считывание окружения человека и его профессиональной деятельности. Совместимость
								li Внутренняя архитектура человека
								li Голографическая работа по решению проблем здоровья
					.col-md-6
						.variant-info
							h5.variant-info-title Что получите после прохождения пакета ПЛАТИНА
							ul.general-list.general-list-2
								li Научитесь сканировать внутренним взором свой организм и чувствовать энергию в теле
								li Интуитивно различать больные и здоровые органы, находить «сбой» в системе глубинного бессознательного и высвобождать энергию подавленных эмоций
								li Эффективно устранять «сбой», завершать стрессовые ситуации прошлого, которые еще хранятся в теле пациента
								li Очищать своё пространство и использовать методы эмоциональной и энергетической «чистки»
			+b('', 'button-plan', href, 'Иду на курс')