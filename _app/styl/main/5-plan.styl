#plan
	padding 90px 0
.general-img-plan-1
	top -350px
	right -250px
.day
	padding-bottom: 50px
	margin-bottom: 50px
	position relative
	border-bottom: 5px solid #B2DFBE
	&-title
		float: left
		width 160px
		background-color: #D0B899
		font-family: PD
		font-size: 42px
		color #fff
		padding 4px 20px
		border-radius: 50px
		text-align center
	&-info
		float: left
		margin 20px 30px 0
		&-title
			font-size: 24px
			font-weight: bold
			margin-bottom: 35px
			max-width 520px
	&-bonus
		position absolute
		top 0
		right 0
		width 400px
		border-radius: 50px
		border 2px solid #D0B899
		padding 12px 20px
		text-align center
		color #D0B899
		font-weight: bold
		&:before
			content: '+'
			display block
			position absolute
			top -10px
			font-size: 90px
			line-height: 90px
			font-weight: 200
			color: #000
			right -60px
.button-plan
	margin-top: 50px