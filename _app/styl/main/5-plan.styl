#plan
	padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.general-img-plan-1
	top -350px
	right -250px
	@media screen and (max-width 560px)
		width 360px
		top -200px
		right -150px
.day
	padding-bottom: 50px
	margin-bottom: 50px
	position relative
	border-bottom: 5px solid #B2DFBE
	@media screen and (max-width 560px)
		padding-bottom: 30px
		margin-bottom: 30px
	&-title
		float: left
		width 160px
		background-color: #D0B899
		font-family: PD
		font-size: 42px
		color #fff
		padding 4px 20px
		border-radius: 50px
		text-align center
		@media screen and (max-width 1199px)
			float: none
		@media screen and (max-width 560px)
			font-size: 30px
	&-info
		float: left
		margin 20px 30px 0
		@media screen and (max-width 1199px)
			float: none
		@media screen and (max-width 560px)
			margin 20px 0 0
		&-title
			font-size: 24px
			font-weight: bold
			margin-bottom: 35px
			max-width 520px
			@media screen and (max-width 1199px)
				max-width none
			@media screen and (max-width 560px)
				font-size: 22px
				margin-bottom: 20px
			@media screen and (max-width 386px)
				font-size: 20px
	&-bonus
		position absolute
		top 0
		right 0
		width 400px
		border-radius: 50px
		border 2px solid #D0B899
		padding 12px 20px
		text-align center
		color #D0B899
		font-weight: bold
		@media screen and (max-width 1199px)
			position: static
			clear: both
			margin-top: 40px
		@media screen and (max-width 560px)
			margin-top: 20px
			width auto
		&:before
			content: '+'
			display block
			position absolute
			top -10px
			font-size: 90px
			line-height: 90px
			font-weight: 200
			color: #000
			right -60px
.button-plan
	margin-top: 50px
	@media screen and (max-width 560px)
		margin-top: 30px