#last
	padding 30px 0 120px
	background-color: #E7DDCF
	@media screen and (max-width 991px)
		padding 30px 0 90px
		text-align center
	@media screen and (max-width 386px)
		padding 0 0 60px
.main-title-last
	margin 35px 0 20px
.main-date-last
	right -250px
.form-main-last
	margin-top: 35px
.last-img
	position relative
	padding-top: 100%
	@media screen and (max-width 991px)
		padding 0
	&:before
		content: ''
		display block
		position absolute
		width 520px
		height: 520px
		border-radius: 50%
		border: 48px solid rgba(255, 255, 255, 0.53)
		top 0
		right -100px
		@media screen and (max-width 1199px)
			top -100px

	img
		bottom -290px
		right 0