#reasons
	position relative
	padding 90px 0
	@media screen and (max-width 991px)
		background-color: #E8F3EF
	@media screen and (max-width 560px)
		padding 60px 0
.reasons-back
	position absolute
	z-index -1
	width 100%
	height: 120%
	top -15%
	left 0
	@media screen and (max-width 991px)
		display none
.reason
	position relative
	background-color #fff
	border-radius: 50px
	padding 60px 20px 30px
	width 100%
	max-width 19%
	margin 0 auto 80px
	min-height 456px
	float: left
	margin-right: 14px
	@media screen and (max-width 1199px)
		max-width 380px
		min-height 1px
		float: none
		margin 0 auto 80px
	@media screen and (max-width 991px)
		&-1
			margin-top: 100px
	@media screen and (max-width 560px)
		padding 40px 20px 30px
	&-2
	&-4
		margin-top: 140px
		@media screen and (max-width 1199px)
			margin-top: 0
	&-5
		margin-right: 0
		@media screen and (max-width 1199px)
			margin-right: auto
		@media screen and (max-width 386px)
			margin-bottom: 30px
	&-title
		font-family: PD
		font-size: 80px
		color: #D0B899
		line-height: 80px
		position absolute
		top -40px
		left 20px
		@media screen and (max-width 560px)
			font-size: 60px