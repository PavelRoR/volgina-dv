#author
	padding 90px 0 300px
	@media screen and (max-width 1199px)
		padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.author-img
	position relative
	width 100%
	max-width 500px
	margin 0 auto
	@media screen and (max-width 1199px)
		margin 0 auto 30px
	&-1
		display block
		@media screen and (max-width 1199px)
			width 100%
		@media screen and (max-width 991px)
			width 80%
	&-2
		position absolute
		top 30px
		right -70px
		animation: rock
		animation-direction: normal;
		animation-duration: 20s;
		animation-fill-mode: forwards;
		animation-iteration-count: infinite;
		animation-timing-function: linear;
		@media screen and (max-width 1199px)
			right -100px
		@media screen and (max-width 991px)
			right 0
		@media screen and (max-width 386px)
			width 100px
@keyframes rock
	0%
		transform: rotate(0)
	50%
		transform: rotate(180deg)
	100%
		transform: rotate(360deg)
.author-item
	position absolute
	width 100%
	max-width 280px
	padding-bottom: 20px
	border-bottom: 5px solid #B2DFBE
	text-align center
	&-1
		top 0
		left 50px
	&-2
		top 0
		right -80px
	&-3
		top 150px
		left 0
	&-4
		top 200px
		right 0px
	&-5
		top 350px
		left 30px
	&-6
		top 500px
		left 120px
	&-7

		top 400px
		right 50px
	&-8
		top 600px
		left 500px
		max-width 320px
	@media screen and (max-width 1199px)
		position: static
		max-width 380px
		margin 0 auto 20px
.general-img-author-1
	top 360px
	right -300px
	@media screen and (max-width 560px)
		top auto
		bottom 0
		width 360px
		right -200px