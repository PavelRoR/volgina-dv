#main
	padding: 0 0 200px
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center bottom
	background-size: 100% 100%
	@media screen and (max-width 991px)
		padding 0 0 90px
		text-align center
	@media screen and (max-width 560px)
		padding 0 0 60px
		background-image: none
		background-color: #E8F3EF
.general-img-main-1
	left 400px
	top -250px
	@media screen and (max-width 560px)
		width 300px
		left 200px
.main-circle
	position absolute
	width 650px
	height: 650px
	border-radius: 50%
	background-image linear-gradient(45deg, rgba(#D0B899, .1) 0%, rgba(#D0B899, .2) 50%)
	padding 30px
	top -50px
	left -200px
	z-index -1
	@media screen and (max-width 560px)
		width 400px
		height: 400px
		left -100px
		top 0
	@media screen and (max-width 386px)
		left -160px
	.main-circle-1
		width 100%
		height: 100%
		border-radius: 50%
		background-color: #E8F3EF
		position relative
		top 0
		left 0
		z-index -1
.main
	&-pre
		font-family: R
		font-size: 20px
		font-weight: bold
		color: #D0B899
		position relative
		display inline-block
		@media screen and (max-width 560px)
			font-size: 18px
		&:before
			content: ''
			display block
			position absolute
			width 269px
			height 5px
			background-color: #B2DFBE
			bottom -10px
			right -200px
			@media screen and (max-width 1199px)
				right -100px
			@media screen and (max-width 991px)
				width 169px
			@media screen and (max-width 560px)
				right 0 
				left 0
				margin 0 auto
			@media screen and (max-width 386px)
				width 69px
	&-title
		font-family: PD
		font-size: 80px
		margin 10px 0 20px
		line-height: 80px
		@media screen and (max-width 991px)
			font-size: 60px
			line-height: 60px
			margin 25px 0
		@media screen and (max-width 560px)
			font-size: 42px
			line-height: 1
		@media screen and (max-width 386px)
			font-size: 36px
	&-subtitle
		font-size: 22px
		max-width 400px
		@media screen and (max-width 991px)
			max-width none
		@media screen and (max-width 560px)
			font-size: 20px
	&-author
		color: #D0B899
		font-size: 24px
		margin 20px 0
		span
			display inline-block
			font-weight: bold
		@media screen and (max-width 560px)
			font-size: 20px
			margin-bottom: 30px
	&-date
		position absolute
		width 240px
		height: 240px
		border-radius: 50%
		background-color: #D0B899
		border 3px solid #fff
		box-shadow: 0 0 0 10px #D0B899
		bottom 40px
		right -160px
		text-align center
		display flex
		align-items: center
		justify-content: center
		flex-direction: column
		@media screen and (max-width 1199px)
			bottom 220px
		@media screen and (max-width 991px)
			position: static
			margin 20px auto 35px
		@media screen and (max-width 560px)
			width 200px
			height: 200px
		p
			&:first-child
				font-size: 30px
				font-weight: 500
				position relative
				line-height: 30px
				margin-bottom: 30px
				@media screen and (max-width 560px)
					font-size: 24px
					margin-bottom: 20px
				&:before
					content: ''
					display block
					width 100px
					height: 3px
					background-color: #000
					position absolute
					left 0
					right 0
					bottom -20px
					margin 0 auto
					@media screen and (max-width 560px)
						bottom -12px
			&:last-child
				font-size: 20px
				@media screen and (max-width 991px)
					font-size: 18px
	&-img
		position relative
		padding-top: 100%
		@media screen and (max-width 991px)
			padding: 0
		img
			position absolute
			top -50px
			left 50px
			@media screen and (max-width 991px)
				position: static
				display block
				width 100%
				max-width 700px
				margin 40px auto 0
.form
	width 100%
	max-width 480px
	@media screen and (max-width 991px)
		margin 0 auto
.input
	display block
	width 100%
	margin-bottom: 15px
	background-color: #fff
	border-radius: 40px
	padding 27px 50px
	color #000
	border 0
	@media screen and (max-width 560px)
		padding 27px 30px
::-webkit-input-placeholder
::-moz-placeholder
:-moz-placeholder
:-ms-input-placeholder
	color:#000
	opacity:1;
@-webkit-keyframes autofill
	to
		font-size: 18px
		color: #000;
		background-color: #fff
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: #FFF !important
.button-form
	display block
	width 100%
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 600
	line-height: 1
.checking
	display: table;
	width 100%
	margin: 5px auto 0
	text-align: left
	&-main
		margin-left: 0
		@media screen and (max-width 991px)
			margin-left: auto
	@media screen and (max-width 560px)
		max-width 390px
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .12)
	100%
		box-shadow: 0 0 15px 10px rgba(red, .12)
.checking .check-label
	line-height: 27px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 30px;
	text-align: left;
	font-size: 13px
	color #aaa
	@media screen and (max-width 560px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #aaa
	&:focus
		border-bottom: 1px dashed
		color #aaa
	&:hover
		border-bottom: none
		text-decoration: none
		color #5c5b5b
.checking .check-label:before
	content: '';
	background-color: red;
	position: absolute;
	left: 0;
	top: 3px;
	width: 20px;
	height: 20px;
	border none
	border-radius: 2px
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 6px;
	top: -10px;
	width: 8px;
	height: 14px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #3f8fd2
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;