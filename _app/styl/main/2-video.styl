#video
	padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
.video-wrapper-video
	max-width 650px
	@media screen and (max-width 991px)
		margin-bottom: 30px
.video-title
	display inline-block
	font-size: 30px
	font-weight: bold
	color: #D0B899
	position relative
	margin-bottom: 60px
	@media screen and (max-width 991px)
		margin-bottom: 45px
	@media screen and (max-width 560px)
		font-size: 24px
	&:before
		content: ''
		display block
		position absolute
		bottom -10px
		right -20%
		width 269px
		height: 5px
		background-color: #B2DFBE
		@media screen and (max-width 1199px)
			right -100px
		@media screen and (max-width 991px)
			width 169px
			left 0