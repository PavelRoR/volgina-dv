#lets
	padding 30px 0
.lets-item
	border-radius: 50%
	padding 30px
	background-color: #D1B496
	color #fff
	width 100%
	max-width 360px
	min-height 360px
	display table
	margin 0 auto 80px
	transition: all .3s ease
	@media screen and (max-width 1199px)
		max-width 290px
		min-height 290px
	@media screen and (max-width 560px)
		margin-bottom: 35px
	@media screen and (max-width 386px)
		max-width 250px
		min-height 250px
		padding 20px
	&-text
		text-align center
		display table-cell
		font-weight: 500
		vertical-align: middle
	&:hover
		background-color #fff
		color #D1B496