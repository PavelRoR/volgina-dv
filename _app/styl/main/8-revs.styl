#revs
	padding 120px 0
	background-image: url(../img/backs/last.png)
	background-repeat no-repeat
	background-position: bottom center
	background-size 100% 100%
	@media screen and (max-width 1199px)
		padding 90px 0
	@media screen and (max-width 991px)
		background-image: none
		background-color: #E7DDCF
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.slick-track
	padding 45px 0
.slick-slide
	transition: all .3s ease
.slick-center
	transform: scale(1.1);
	transition: all .3s ease
.revs-slider-text
	width 100%
	max-width 1440px
	margin 0 auto
	@media screen and (max-width: 560px)
		max-width none
		width 96%
.text-rev-img
	border 3px solid #B2DFBE
	border-radius 20px
	display block
	margin 0 auto
	width 100%
	max-width 360px
	@media screen and (max-width 1199px)
		width 90%
	@media screen and (max-width 767px)
		height: 100%
		width auto
	@media screen and (max-width: 560px)
		width 90%
		max-width 350px
