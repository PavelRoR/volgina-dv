.slick-prev
.slick-next
	width 70px
	height: 70px
	border-radius 50%
	text-align center
	background-color: #fff
	border 3px solid #D0B899
	color #D0B899
	transition: all .3s ease
	z-index 200
	span
		font-size: 70px;
		font-weight: 200
		position absolute
		top 42%
		left 0
		right 0
		margin 0 auto
		width 28px
	&:focus
		background-color: #fff
		color #D0B899
	&:hover
		background-color: #D0B899
		color #fff
	&:before
	&:after
		content none
	@media screen and (max-width: 991px)
		width 60px
		height: 60px
.slick-prev
	left 30.1%
	@media screen and (max-width 767px)
		left 18%
	@media screen and (max-width: 560px)
		left 0
.slick-next
	right 30.1%
	@media screen and (max-width 767px)
		right 18%
	@media screen and (max-width: 560px)
		right 0