*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: RW
	color #000
	background-color #FAFBFC
	line-height: 1.56
.wrapper
	overflow hidden
.content
	position relative
	z-index 30
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #000
	width: auto
	font-size: 24px
	padding 19px 65px
	background-color: #B2DFBE
	border-radius: 40px
	transition: all .3s ease
	position relative
	z-index 60
	&:focus
		text-decoration none
		color #000
	&:hover
		text-decoration none
		color #000
		background-color: #B2DFBE - 20%
	@media screen and (max-width 1199px)
		padding 24px 58px
	@media screen and (max-width 991px)
		&-wrapper
			text-align center
	@media screen and (max-width 560px)
		padding 24px 25px
		min-width 220px
		font-size: 20px
.general-title
	text-align center
	font-family: PF
	font-size: 40px
	margin-bottom: 80px
	span
		position relative
		display inline-block
		&:before
			content: ''
			display block
			position absolute
			width 269px
			height: 5px
			bottom: -10px
			@media screen and (max-width 991px)
				width 169px
			@media screen and (max-width 386px)
				width 69px
	&-green
		span
			&:before
				right -200px
				background-color: #B3DFBE
				@media screen and (max-width 1199px)
					right -100px
				@media screen and (max-width 991px)
					right 0 
					left 0
					margin 0 auto
	&-brown
		span
			&:before
				left -200px
				background-color: #D0B899
				@media screen and (max-width 1199px)
					left -100px
				@media screen and (max-width 991px)
					right 0 
					left 0
					margin 0 auto
	@media screen and (max-width: 560px)
		font-size: 28px
		margin-bottom: 50px
.general-img
	position absolute
.general-list
	li
		list-style: none
		position relative
		padding-left: 40px
		margin-bottom: 30px
		font-size: 20px
		@media screen and (max-width: 991px)
			padding-left: 30px
		@media screen and (max-width: 560px)
			font-size: 18px
			margin-bottom: 15px
			padding-left: 25px
		&:last-child
			margin-bottom: 0
		span
			font-weight bold
		&:before
			content: ''
			display block
			position absolute
			border-radius: 50px
			width 18px
			height: 18px
			background-color: #B3DFBE
			top 6px
			left 0
			@media screen and (max-width: 560px)
				width 12px
				height: 12px
				top 8px
.general-text
	margin-bottom: 20px
	&:last-of-type
		margin-bottom: 0