#main
	padding: 0 0 200px
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center bottom
	background-size: 100% 100%
	@media screen and (max-width 991px)
		padding 0 0 90px
		text-align center
	@media screen and (max-width 560px)
		padding 0 0 60px
		background-image: none
		background-color: #E8F3EF
.general-img-main-1
	left 400px
	top -250px
	@media screen and (max-width 560px)
		width 300px
		left 200px
.main-circle
	position absolute
	width 650px
	height: 650px
	border-radius: 50%
	background-image linear-gradient(45deg, rgba(#D0B899, .1) 0%, rgba(#D0B899, .2) 50%)
	padding 30px
	top -50px
	left -200px
	z-index -1
	@media screen and (max-width 560px)
		width 400px
		height: 400px
		left -100px
		top 0
	@media screen and (max-width 386px)
		left -160px
	.main-circle-1
		width 100%
		height: 100%
		border-radius: 50%
		background-color: #E8F3EF
		position relative
		top 0
		left 0
		z-index -1
.main
	&-pre
		font-family: RW
		font-size: 16px
		margin-bottom: -20px
		@media screen and (max-width 991px)
			margin-bottom: 0
	&-title
		font-family: PD
		font-size: 80px
		line-height: 80px
		@media screen and (max-width 991px)
			font-size: 60px
			line-height: 60px
			margin 25px 0
		@media screen and (max-width 560px)
			font-size: 42px
			line-height: 60px
		@media screen and (max-width 386px)
			font-size: 36px
			line-height: 1
		small
			// margin 10px 0 20px
			font-family: R
			font-size: 20px
			line-height: 20px
			font-weight: bold
			color: #D0B899
			position relative
			display inline-block
			@media screen and (max-width 991px)
				display block
				width 170px
				margin 0 auto
			@media screen and (max-width 560px)
				font-size: 18px
				margin-bottom: 10px
			&:before
				content: ''
				display block
				position absolute
				width 269px
				height 5px
				background-color: #B2DFBE
				bottom -10px
				right -200px
				@media screen and (max-width 1199px)
					right -100px
				@media screen and (max-width 991px)
					width 169px
				@media screen and (max-width 560px)
					right 0 
					left 0
					margin 0 auto
				@media screen and (max-width 386px)
					width 69px
	&-subtitle
		font-size: 22px
		max-width 400px
		@media screen and (max-width 991px)
			max-width none
		@media screen and (max-width 560px)
			font-size: 20px
	&-author
		color: #D0B899
		font-size: 24px
		margin 20px 0
		span
			display inline-block
			font-weight: bold
		@media screen and (max-width 560px)
			font-size: 20px
			margin-bottom: 30px
	&-date
		position absolute
		width 240px
		height: 240px
		border-radius: 50%
		background-color: #D0B899
		border 3px solid #fff
		box-shadow: 0 0 0 10px #D0B899
		bottom 10px
		right 20px
		text-align center
		display flex
		align-items: center
		justify-content: center
		flex-direction: column
		@media screen and (max-width 1199px)
			bottom 20px
			right -60px
		@media screen and (max-width 991px)
			position: static
			margin 40px auto 0
		@media screen and (max-width 560px)
			width 200px
			height: 200px
		p
			&:first-child
				font-size: 30px
				font-weight: 500
				position relative
				line-height: 30px
				margin-bottom: 30px
				@media screen and (max-width 560px)
					font-size: 24px
					margin-bottom: 20px
					width 100%
				&:before
					content: ''
					display block
					width 100px
					height: 3px
					background-color: #000
					position absolute
					left 0
					right 0
					bottom -20px
					margin 0 auto
					@media screen and (max-width 560px)
						bottom -12px
			&:last-child
				font-size: 20px
				@media screen and (max-width 991px)
					font-size: 18px
	&-img
		position relative
		padding-top: 100%
		@media screen and (max-width 991px)
			padding: 0
		&:before
			content: ''
			display block
			position absolute
			width 600px
			height: 600px
			border-radius: 50%
			border 50px solid #B2DFBE
			top 0
			left 0
			@media screen and (max-width 991px)
				top auto
				bottom 0
				left  auto
				right -200px
				width 350px
				height: 350px
			@media screen and (max-width 386px)
				width 220px
				height: 220px
				border-width: 16px
.button-main
	margin-top: 50px