#packets
	padding 90px 0
.general-img-packets-1
	top -300px
	left -300px
.general-img-packets-2
	bottom 100px
	right: -250px
.packet
	width 100%
	max-width 380px
	margin 40px auto
	background-color #fff
	padding 40px 20px 30px
	border-radius: 50px
	position relative
	&-head
		position absolute
		top -55px
		left 20px
		&-title
			font-family: PD;
			font-size: 40px;
			color: #d0b899;
			line-height: 1.4
			small
				font-size: 18px
				display block
				color #000
	&-body
		min-height 690px
		&-text
			margin-bottom: 10px
			&:last-of-type
				margin-bottom: 0
			span
				font-weight: bold
				display inline-block
		&-list
			margin: 20px 0 30px
			li
				list-style none
				padding-left: 20px
				margin-bottom: 10px
				position relative
				&:before
					content: ''
					display block
					position absolute
					top 11px
					left 0
					border-radius: 50px
					width 10px
					height: 10px
					background-color: #d0b899
.cost
	text-align center
	font-family: PD;
	font-size: 36px
	margin-bottom: 20px
	line-height: 1.3
	span
		display block
	&&-full
		span
			text-decoration: line-through
			&.unbroken
				text-decoration: none
	&&-sale
		color red
	&&-today
		color limegreen
		margin-bottom: 30px
.button-cost
	width 100%
	display block
.prepayment
	text-align center
	margin-bottom: 50px
	&-title
		font-family: PD;
		font-size: 50px
		color red
		line-height: 1.3
	&-text
		font-size: 20px
		margin 20px 0 30px
.timer-title
	font-family: PD;
	font-size: 50px
	color red
	line-height: 1.3
	text-align center
	@media screen and (max-width 560px)
		font-size: 32px
		line-height: 1.3
	@media screen and (max-width 385px)
		font-size: 26px
.flip-clock-wrapper
	font-family: SUD
	width: 100%
	max-width 460px
	margin-top: 30px
	ul
		background: transparent
.flip-clock-divider .flip-clock-label
	color #000
	font-family: RW
	font-weight: normal
.flip-clock-dot
	background-color: #D1B496
	box-shadow: none
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	font-family: R
	font-weight: bold
	background-color: #D1B496
	text-shadow: none
	border-radius 20px
.flip-clock-wrapper ul li a div.down
	border-bottom-right-radius 20px
	border-bottom-left-radius 20px
	font-family: R
.flip-clock-wrapper .flip
	box-shadow: none
@media screen and (max-width 560px)
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px