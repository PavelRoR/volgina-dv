#last
	padding 30px 0 120px
	@media screen and (max-width 991px)
		padding 30px 0 90px
		text-align center
	@media screen and (max-width 386px)
		padding 0 0 60px
.last-title
	font-family: PD
	font-size: 80px
.last-text
	font-size: 22px
	margin 40px 0 50px
.last-img
	position relative
	padding-top: 100%
	@media screen and (max-width 991px)
		padding 0
	&:before
		content: ''
		display block
		position absolute
		width 520px
		height: 520px
		border-radius: 50%
		border: 48px solid rgba(255, 255, 255, 0.53)
		top 0
		right -100px
		@media screen and (max-width 1199px)
			top -100px

	img
		bottom -290px
		right 0