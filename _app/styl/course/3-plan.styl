#plan
	padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.general-img-plan-1
	top -100px
	right -250px
	@media screen and (max-width 560px)
		width 360px
		top -200px
		right -150px
.variant
	padding-bottom: 50px
	margin-bottom: 50px
	position relative
	border-bottom: 5px solid #B2DFBE
	@media screen and (max-width 560px)
		padding-bottom: 30px
		margin-bottom: 30px
	&-title
		display inline-block
		background-color: #D0B899
		font-family: PD
		font-size: 42px
		color #fff
		padding 4px 20px
		border-radius: 50px
		text-align center
		margin-bottom: 30px
		@media screen and (max-width 1199px)
			float: none
		@media screen and (max-width 560px)
			font-size: 24px
	&-info
		&-title
			font-size: 24px
			font-weight: bold
			margin-bottom: 35px
			@media screen and (max-width 991px)
				margin-top: 40px
			@media screen and (max-width 560px)
				font-size: 20px
				margin-bottom: 20px
			@media screen and (max-width 386px)
				font-size: 20px
				margin-top: 25px
@media screen and (max-width 560px)
	.variant-3
		.variant-title
			margin-bottom: 0
.button-plan
	margin-top: 50px
	@media screen and (max-width 560px)
		margin-top: 30px
	@media screen and (max-width 386px)
		margin-top: 0