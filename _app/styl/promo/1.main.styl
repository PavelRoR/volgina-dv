#main
	padding 40px 0 70px
	min-height calc(100vh - 265px)
	.container
		position relative
	@media screen and (max-width 991px)
		text-align center
		padding 0 0 40px
	@media screen and (max-width 386px)
		padding 0 0 30px
.main
	&-subtitle
		font-family: PD
		font-size: 30px
		color #B18663
		margin 0 0 30px
		@media screen and (max-width 560px)
			font-size: 26px
			margin-bottom: 20px
	&-text
		line-height: 140%
		font-size: 22px
		margin-bottom: 20px
		span
			font-weight: bold
		@media screen and (max-width 767px)
			font-size: 20px
			margin-bottom: 20px
		@media screen and (max-width 386px)
			margin-bottom 15px
			font-size: 18px
