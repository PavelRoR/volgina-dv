.main-img
	position relative
	padding-top: 100%
	&:before
		content: ''
		display block
		position absolute
		width 600px
		height: 600px
		top -100px
		right -250px
		border-radius: 50%
		background-color: rgba(#D0B899, .1)
		@media screen and (max-width 991px)
			width 450px
			height: 450px
			left 0
			right 0
			margin 0 auto
			top 40px
		@media screen and (max-width 386px)
			width 300px
			height: 300px
	img
		display block
		position absolute
		bottom 0
		right -150px
		width 580px
		@media screen and (max-width 1199px)
			right -270px
			top -100px
		@media screen and (max-width 991px)
			top auto
			top 100px
			right -20px
			width 100%
			max-width 580px